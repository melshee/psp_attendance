<body>

    <header>
        <div class="wrapper">
            <div id="logo">
                <h1>Phi Sigma Pi - UC Davis</h1>
                <h2>General Meeting Attendance Tracker</h2>
            </div>

        </div>
        <!--.wrapper-->
    </header>

    <div id="links">
        <%= link_to 'Admin Login', admin_path %>
<!--        <a href="contact.html">GM Minutes</a>-->
    </div>


    <section id="form">
        <!-- Contact Form -->
<!--        <form action="#" method="post">-->
<!--        <form action="<%= brothers_path %>" method="POST">-->
            <%= form_tag brothers_path do %>
            
            <label for="first_name">First Name</label>
            <input type="text" id="first_name" name="brother[first_name]" placeholder="ex: Melissa" size="12" required> <br>

            <label for="last_name">Last Name</label>
            <input type="text" id="last_name" name="brother[last_name]" placeholder="ex: Sheehan" size="12" required> <br>

            <div id="on_time">
                <input type="radio" name="brother[on_time]" value="true">On time<br>
                <input type="radio" name="brother[on_time]" value="false">Late<br>
                <!--  <input type="hidden" name="arrival" value="absent">Absent-->
           </div>

            <label for="email">Email</label>
            <input type="email" id="email" name="brother[email]" placeholder="incredibles@ucdavis.edu" size="22" required> (used to send you a confirmation email)<br>

            <label for="code">Code</label>
            <input type="code" id="code" name="brother[code]" placeholder="123abc" size="8" required> <br>
            
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            
             <%= submit_tag "Submit" %>
<!--            <input id="submitBtn" type="submit" value="send">-->
    <% end %>
<!--        </form>-->

        
<% #= params.inspect %>
   
   
